
<div class="pkmn-card">
    <div>
        <span>
            {% if pokemon.pokemonSprites.spriteFrontDefault is not null %}
                <a href="{{ path('profile_pokemon', {slug_pokemon: pokemon.slug }) }}">
                    <img class="mb-2" src="{{ pokemon.pokemonSprites.spriteFrontDefault }}" alt="Pokemon {{ pokemon.name }}">
                </a>
            {% else %}
                <div class="h-100 mt-1">
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                </div>
            {% endif %}
        </span>
    </div>
    <div>
        <span>
            <a class="bold-link" href="{{ path('profile_pokemon', {slug_pokemon: pokemon.slug }) }}">
                {{ pokemon.name }}
            </a>
        </span>
        <div class="row justify-content-center">
            {% for type in pokemon.types %}
                    {% if size == 1 %}
                        <img class="size-5" src="{{ type.img }}" alt="Type {{ type.name|lower }}">
                    {% elseif size <= 5 %}
                        <img class="size-15" src="{{ type.img }}" alt="Type {{ type.name|lower }}">
                    {% else %}
                        <img class="size-40" src="{{ type.img }}" alt="Type {{ type.name|lower }}">
                    {% endif %}
            {% endfor %}
        </div>
    </div>
</div>