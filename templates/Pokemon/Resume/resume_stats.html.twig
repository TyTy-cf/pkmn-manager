            <div class="barchart-bar {{ pokemon.spa|statsCss }}" style="width: {{ pokemon.spa|percent }}%"></div>
        </td>
        <td>{{ pokemon.spaFormula(0, 0, 100, 0.9) }}</td>
        <td>{{ pokemon.spaFormula(0, 0, 100, 1) }}</td>
        <td>{{ pokemon.spaFormula(31, 255, 100, 1) }}</td>
        <td>{{ pokemon.spaFormula(31, 255, 100, 1.1) }}</td>
    </tr>
