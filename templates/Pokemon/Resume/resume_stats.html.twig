<table class="table table-striped profile-table text-center table-stats">
    <tbody>
    <tr>
        <td></td>
        <td class="th small-col">{{ 'pokemon.stats.ev'|trans }}</td>
        <td class="th small-col">{{ 'pokemon.stats.base'|trans }}</td>
        <td></td>
        <td class="th small-col" title="EV=0, IV=0, Nature-">{{ 'pokemon.stats.min.max'|trans }}</td>
        <td class="th small-col" title="EV=0, IV=0, Nature=">{{ 'pokemon.stats.min.min'|trans }}</td>
        <td class="th small-col" title="EV=255, IV=31, Nature=">{{ 'pokemon.stats.max.min'|trans }}</td>
        <td class="th small-col" title="EV=255, IV=31, Nature+">{{ 'pokemon.stats.max.max'|trans }}</td>
    </tr>
    <tr>
        <th>{{ 'pokemon.stats.hp'|trans }}</th>
        <td>{{ pokemon.statsEffort.hp }}</td>
        <td>{{ pokemon.hp }}</td>
        <td class="barchart-cell">
            <div class="barchart-bar {{ pokemon.hp|statsCss }}" style="width: {{ pokemon.hp|percent }}%"></div>
        </td>
        <td></td>
        <td>{{ pokemon.hpFormula(0, 0, 100) }}</td>
        <td>{{ pokemon.hpFormula(31, 255, 100) }}</td>
        <td></td>
    </tr>
    <tr>
        <th>{{ 'pokemon.stats.atk'|trans }}</th>
