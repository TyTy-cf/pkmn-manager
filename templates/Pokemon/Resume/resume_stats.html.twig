        </td>
        <td>{{ pokemon.atkFormula(0, 0, 100, 0.9) }}</td>
        <td>{{ pokemon.atkFormula(0, 0, 100, 1) }}</td>
        <td>{{ pokemon.atkFormula(31, 255, 100, 1) }}</td>
        <td>{{ pokemon.atkFormula(31, 255, 100, 1.1) }}</td>
    </tr>
