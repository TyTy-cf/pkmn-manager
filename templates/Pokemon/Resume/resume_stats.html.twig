        <td>{{ pokemon.speFormula(31, 255, 100, 1) }}</td>
        <td>{{ pokemon.speFormula(31, 255, 100, 1.1) }}</td>
    </tr>
    <tr>
        <th>{{ 'pokemon.stats.total'|trans }}</th>
        <td></td>
        <td class="th">{{ pokemon.totalStats }}</td>
    </tr>
