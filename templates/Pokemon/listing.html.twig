{% extends 'base.html.twig' %}
{% block title %}Catch 'em all{% endblock %}

{% block body %}
    <div class="container col-8">
        {{ include('search.html.twig') }}
        <div class="row justify-content-center">
            {% if offset > 0 %}
                <a class="btn btn-sm btn-dark mr-2" href="{{ path('listing', {offset: offset - 42}) }}">
                    <i class="fa fa-arrow-left"></i>
                </a>
            {% endif %}
            <a class="btn btn-sm btn-info" href="{{ path('listing', {offset: offset + 42 }) }}">
                <i class="fa fa-arrow-right"></i>
            </a>
        </div>
        <hr>
        <div>
            <table class="table-striped w-100">
                <tbody>
                <thead>
                    <tr>
                        <th></th>
                        <th>{{ 'pokemon.name'|trans }}</th>
                        <th>{{ 'pokemon.type'|trans }}</th>
                        <th>{{ 'pokemon.stats.total'|trans }}</th>
                        <th>{{ 'pokemon.stats.hp'|trans }}</th>
                        <th>{{ 'pokemon.stats.atk'|trans }}</th>
                        <th>{{ 'pokemon.stats.def'|trans }}</th>
                        <th>{{ 'pokemon.stats.spa'|trans }}</th>
                        <th>{{ 'pokemon.stats.spd'|trans }}</th>
                        <th>{{ 'pokemon.stats.spe'|trans }}</th>
                    </tr>
                </thead>
                {% for pokemon in pokemonsList %}
                    <tr>
                        <td><img class="size-150 mb-2" src="{{ pokemon.urlIcon }}" alt="Pokemon {{ pokemon.name }}"></td>
                        <td><a href="{{ path('profile_pokemon', {slug: pokemon.slug }) }}">{{ pokemon.name }}</a></td>
                        <td>
                            {% for type in pokemon.types %}
                                <img class="size-20" src="{{ type.img }}" alt="Type {{ type.name }}"><br>
                            {% endfor %}
                        </td>
                        <td><strong>{{ pokemon.totalStats }}</strong></td>
                        <td>{{ pokemon.hp }}</td>
                        <td>{{ pokemon.atk }}</td>
                        <td>{{ pokemon.def }}</td>
                        <td>{{ pokemon.spa }}</td>
                        <td>{{ pokemon.spd }}</td>
                        <td>{{ pokemon.spe }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
