{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="form-row">
            <div class="col-12 mt-3">
                <h1>
                    {{ 'pokemon_sheet.title.add_move'|trans({'%pokemon%': pokemonSheet.pokemon.name}) }}
                </h1>
            </div>

            <div class="col-12 row">
                <div class="col-6">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.nickname) }}
                            {{ form_row(form.moveSetName) }}
                            {{ form_row(form.ability) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.move_1) }}
                            {{ form_row(form.move_2) }}
                            {{ form_row(form.move_3) }}
                            {{ form_row(form.move_4) }}
                        </div>
                        <div class="text-left">
                            {{ form_row(form.submit) }}
                        </div>
                    {{ form_end(form) }}
                </div>
                <div class="col-6">
                    <img class="pkmnProfile_sprite" src="{{ pokemonSheet.pokemon.pokemonSprites.spriteOfficial }}"
                         alt="{{ pokemonSheet.pokemon.name|capitalize }}"
                    >
                </div>
            </div>
        </div>
    </div>
{% endblock %}
