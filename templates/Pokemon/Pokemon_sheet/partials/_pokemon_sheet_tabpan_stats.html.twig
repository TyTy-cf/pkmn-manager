{{ form_start(formStats) }}
    <table class="table table-striped text-center table-fixed">
        <thead>
            <tr>
                <th></th>
                <th>{{ 'pokemon_sheet.show.stats.hp'|trans }}</th>
                <th>{{ 'pokemon_sheet.show.stats.atk'|trans }}</th>
                <th>{{ 'pokemon_sheet.show.stats.def'|trans }}</th>
                <th>{{ 'pokemon_sheet.show.stats.spa'|trans }}</th>
                <th>{{ 'pokemon_sheet.show.stats.spd'|trans }}</th>
                <th>{{ 'pokemon_sheet.show.stats.spe'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>{{ 'pokemon_sheet.show.stats.base_stats'|trans }}</th>
                <td>{{ pokemonSheet.pokemon.hp }}</td>
                <td>{{ pokemonSheet.pokemon.atk }}</td>
                <td>{{ pokemonSheet.pokemon.def }}</td>
                <td>{{ pokemonSheet.pokemon.spa }}</td>
                <td>{{ pokemonSheet.pokemon.spd }}</td>
                <td>{{ pokemonSheet.pokemon.spe }}</td>
            </tr>
            {% if pokemonSheet.stats is not null %}
                <tr>
                    <th>{{ 'pokemon_sheet.show.stats.stats'|trans }}</th>
                    <td>{{ form_widget(formStats.stats.hp) }}</td>
                    <td>{{ form_widget(formStats.stats.atk) }}</td>
                    <td>{{ form_widget(formStats.stats.def) }}</td>
                    <td>{{ form_widget(formStats.stats.spa) }}</td>
                    <td>{{ form_widget(formStats.stats.spd) }}</td>
                    <td>{{ form_widget(formStats.stats.spe) }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>{{ 'pokemon_sheet.show.stats.ev'|trans }}</th>
                <td>{{ form_widget(formStats.evs.hp) }}</td>
                <td>{{ form_widget(formStats.evs.atk) }}</td>
                <td>{{ form_widget(formStats.evs.def) }}</td>
                <td>{{ form_widget(formStats.evs.spa) }}</td>
                <td>{{ form_widget(formStats.evs.spd) }}</td>
                <td>{{ form_widget(formStats.evs.spe) }}</td>
            </tr>
            {% if pokemonSheet.ivs is not null %}
                <tr>
                    <th>{{ 'pokemon_sheet.show.stats.iv'|trans }}</th>
                    <td>{{ pokemonSheet.ivs.hp }}</td>
                    <td>{{ pokemonSheet.ivs.atk }}</td>
                    <td>{{ pokemonSheet.ivs.def }}</td>
                    <td>{{ pokemonSheet.ivs.spa }}</td>
                    <td>{{ pokemonSheet.ivs.spd }}</td>
                    <td>{{ pokemonSheet.ivs.spe }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
    <button type="submit"
            class="btn btn-primary ml-1 btn-search-pokemon"
            title="Mettre Ã  jour"
    >
        {{ 'pokemon_sheet.show.stats.update'|trans }}
    </button>
{{ form_end(formStats) }}

