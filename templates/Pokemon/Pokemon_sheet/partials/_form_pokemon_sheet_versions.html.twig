<div class="field-form pokemon-sheet-btn">
    <div data-original-hidden="form_version">
        {% include 'Pokemon/Pokemon_sheet/partials/_pokemon_sheet_version.html.twig' with {pokemonSheet: pokemonSheet} %}
    </div>
    <div class="d-none" data-form-hidden="form_version">
        <select name="select-pokemon-sheet-version" class="mt-1" data-input-hidden="form_version">
            {% for version in versions %}
                <option value="{{ version.id }}">
                    {{ version.name }}
                </option>
            {% endfor %}
        </select>
        <button title="Valider" class="ml-1 btn pokemon-sheet-add-button"
                data-action-hidden="/pokemonSheet/changeVersion/" data-submit-hidden="form_version"
        >
            <i class="fas fa-check-circle"></i>
        </button>
        <button title="Annuler" class="btn pokemon-sheet-cancel-button" data-cancel-hidden="form_version">
            <i class="fas fa-times-circle"></i>
        </button>
    </div>
    <button class="ml-5 btn pokemon-sheet-edit-button" title="Modifier" data-edit-hidden="form_version">
        <i class="fas fa-edit"></i>
    </button>
</div>
