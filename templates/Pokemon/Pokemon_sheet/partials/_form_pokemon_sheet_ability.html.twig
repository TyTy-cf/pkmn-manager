<div class="field-form pokemon-sheet-btn">
    <div data-original-hidden="form_hidden_ability">
        {% include 'Pokemon/Pokemon_sheet/partials/_pokemon_sheet_ability.html.twig' with {ability: pokemonSheet.ability} %}
    </div>
    <div class="d-none" data-form-hidden="form_hidden_ability">
        <select name="select-pokemon-sheet-ability" class="mt-1" data-input-hidden="form_hidden_ability">
            {% for pkmnAbility in abilities %}
                <option value="{{ pkmnAbility.ability.id }}">
                    {{ pkmnAbility.ability.name }}
                    {% if pkmnAbility.hidden %}
                        - <span class="hidden-talent">{{ 'pokemon.hidden_talent'|trans }}</span>
                    {% endif %}
                </option>
            {% endfor %}
        </select>
        <button title="Valider" class="ml-1 btn pokemon-sheet-add-button"
                data-action-hidden="/pokemonSheet/changeAbility/" data-submit-hidden="form_hidden_ability"
        >
            <i class="fas fa-check-circle"></i>
        </button>
        <button title="Annuler" class="btn pokemon-sheet-cancel-button" data-cancel-hidden="form_hidden_ability">
            <i class="fas fa-times-circle"></i>
        </button>
    </div>
    <button class="ml-5 btn pokemon-sheet-edit-button" title="Modifier" data-edit-hidden="form_hidden_ability">
        <i class="fas fa-edit"></i>
    </button>
</div>
