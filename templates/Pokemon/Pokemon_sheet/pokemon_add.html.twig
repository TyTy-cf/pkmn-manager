{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="form-row">
            <div class="col-12 mt-3">
                <h1>
                    {{ 'pokemon_sheet.title.add'|trans }}
                </h1>
            </div>

            <div class="col-12">
                {{ form_start(form) }}
                    <div class="form-group row">
                        <div class="col-sm-6">
                            {{ form_row(form.pokemon) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            {{ form_row(form.nature) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            {{ form_row(form.gender) }}
                        </div>
                    </div>
                    <div class="text-left">
                        {{ form_row(form.submit) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
