{% extends 'base.html.twig' %}
{% block title %}Catch 'em all{% endblock %}
{% block body %}
    <h1 class="text-center mb-1 mt-3">Profil de {{ pokemon.name }}</h1>
    <hr>
    <div class="row justify-content-center mb-3 mt-3">
        <img src="{{ pokemon.urlSpriteImg }}" width="15%" height="15%" alt="Image de {{ pokemon.name|capitalize }}">
    </div>
    <hr>
    <div class="container">
        <div class="row pt-2">
            <div class="col-md-6">
                <h2 class="text-center">Type(s)</h2>
                <div class="row text-center">
                    {% for type in pokemon.types %}
                        <div class="col-md-6">
                            <img src="{{ type.img }}" alt="Type {{ type.name|lower }}"></li>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-6">
                <h2 class="text-center">Capacit√©(s)</h2>
                <ul>
                    {% for ability in pokemon.abilities %}
                        <li><strong>{{ ability.name|capitalize }}</strong>: {{ ability.description }}</li>
                    {% endfor %}
                </ul>
            </div>
            <hr>
            <div class="col-md-12 mt-3">
                <h2 class="text-center mb-3">Stats de base</h2>
                <table class="table text-center">
                    <thead>
                    <tr>
                        <th scope="col">HP</th>
                        <th scope="col">ATK</th>
                        <th scope="col">DEF</th>
                        <th scope="col">SPA</th>
                        <th scope="col">SPD</th>
                        <th scope="col">SPE</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ pokemon.hp }}</td>
                        <td>{{ pokemon.atk }}</td>
                        <td>{{ pokemon.def }}</td>
                        <td>{{ pokemon.spa }}</td>
                        <td>{{ pokemon.spd }}</td>
                        <td>{{ pokemon.spe }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <hr>
        <div class="row justify-content-center">
            <a href="{{ path('listing', { offset: 0 }) }}" class="btn btn-danger">Retour</a>
        </div>
    </div>
{% endblock %}
