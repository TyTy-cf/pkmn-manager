<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Catch 'em all{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
{% block body %}
    <h1 class="text-center mb-1 mt-3">Profil de {{ pokemon.name }}</h1>
    <hr>
    <div class="row justify-content-center mb-3 mt-3">
        <img src="#" width="200px"
             alt="Image de {{ pokemon.name|capitalize }}">
    </div>
    <hr>
    <div class="container">
        <div class="row pt-2">
            <div class="col-md-6">
                <h2 class="text-center">Type</h2>
                <ul>
                    {% dump(pokemon) %}
                    {% for type in pokemon.types %}
                        <li>{{ type.name }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-6">
                <h2 class="text-center">Abilities</h2>
                <ul>
                    {% for ability in pokemon.abilities %}
                        {% dump(ability) %}
                        <li>{{ ability.name|capitalize }}</li>
                    {% endfor %}
                </ul>
            </div>
            <hr>
            <div class="col-md-12 mt-3">
                <h2 class="text-center mb-3">Sp√©ciales Stats</h2>
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th scope="col">HP</th>
                            <th scope="col">ATK</th>
                            <th scope="col">DEF</th>
                            <th scope="col">SPA</th>
                            <th scope="col">SPD</th>
                            <th scope="col">SPE</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ pokemon.hp }}</td>
                            <td>{{ pokemon.atk }}</td>
                            <td>{{ pokemon.def }}</td>
                            <td>{{ pokemon.spa }}</td>
                            <td>{{ pokemon.spd }}</td>
                            <td>{{ pokemon.spe }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <hr>
        <div class="row justify-content-center">
            <a href="{{ path('listing', { offset: 0 }) }}" class="btn btn-danger">Retour</a>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
