{% extends 'base.html.twig' %}

{% block title %}Catch 'em all{% endblock %}

{% block body %}

    <div class="container">
        <div class="mt-3">
            {% include 'search.html.twig' %}
        </div>
        <h2 class="bordered-title">{{ 'index.generation.all.title'|trans }}</h2>
        <hr>
        <table class="table-striped w-100">
            <tbody>
            {% for generation in generationList %}
                <tr>
                    <td class="p-4 m-2">
                        <span>
                            <div class="d-inline-flex">
                                <a class="bold-link fs-120 no-underline"
                                   href="{{ path('pokedex_list_generation', {'slug': generation.slug, 'code': language.code }) }}"
                                >
                                    {{ generation }}
                                    <div class="detailed">
                                        ({{ generation.mainRegion.name }})
                                    </div>
                                </a>
                                {% if generation.versionsGroup|length != 0 %}
                                    <div class="ml-3 light-detailed-italic">
                                        {% for versionGroup in generation.versionsGroup %}
                                            {% for version in versionGroup.versions %}
                                                <img class="size-{% if generation.number == 1 or generation.number == 2 %}20{% else %}15{% endif %}"
                                                     src="{{ version.logo }}"
                                                     alt="Type {{ version.name|lower }}"
                                                     title="{{ version.name|lower }}"
                                                />
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </span>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
