{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="text-center bordered-title">{{ eggGroup.name }}</h1>
    <hr>
    <div class="grid-row">
        <div class="grid-col ">
            <h2>{{ 'index.egg_group.pokemons'|trans }}</h2>
            <div class="list-card-pkmn list-card-pkmn-lg">
                {% for pokemonSpecies in eggGroup.pokemonSpecies %}
                    {% for pokemon in pokemonSpecies.pokemons %}
                        {% if pokemon.pokemonSprites.spriteFrontDefault is not null %}
                            {% include'Pokemon/pokemon_card.html.twig' with {'pokemon' : pokemon, 'size': pokemonSpecies.pokemons|length} %}
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}