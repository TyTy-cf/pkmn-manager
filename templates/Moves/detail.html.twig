{% extends 'base.html.twig' %}

{% block title %}
    {{ 'move.title.main'|trans({'%move%': move.name}) }}
{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-center bordered-title">{{ move.name }}</h1>
        <hr>
        <div class="grid-row">
            <div class="col-4 float-left">
                <h2>{{ 'move.title.datas'|trans }}</h2>
                {% include 'Moves/detail_infos.html.twig' with {'move' : move} %}
            </div>
            <div class="col-8 float-left">
                <h2>{{ 'move.title.description'|trans }}</h2>
                {% include 'Moves/detail_description.html.twig' with {'moveDescription' : move.movesDescription} %}
            </div>
            {% if moveMachine|length > 0 %}
                <div class="col-5 float-left">
                    <h2>{{ 'move.title.machine'|trans }}</h2>
                    {% include 'Moves/detail_machines.html.twig' with {'moveMachine' : moveMachine} %}
                </div>
            {% endif %}
        </div>
        <div>
            <h2 class="text-center bordered-title">{{ 'move.title.pokemons'|trans }}</h2>
            <div class="container pokedexPage-content">
                <div class="pkmnCard-container">
                    {% for pmlv in move.pokemonMovesLearnVersion %}
                        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 px-2 mb-3">
                            {% include'Pokemon/Cards/pokemon_card.html.twig' with {'pokemon' : pmlv.pokemon, 'size': move.pokemonMovesLearnVersion|length } %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
